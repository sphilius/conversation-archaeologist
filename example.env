# Conversation Archaeologist Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# AUTHENTICATION
# ============================================================================

# Claude session token (get from browser cookies)
# 1. Open claude.ai in browser
# 2. Open DevTools (F12) → Application → Cookies
# 3. Find 'sessionKey' cookie and copy value
CLAUDE_SESSION_TOKEN=your_session_token_here

# ============================================================================
# EXTRACTION SETTINGS
# ============================================================================

# Maximum concurrent extractions for batch processing
MAX_CONCURRENT_EXTRACTIONS=5

# Scraping timeout in milliseconds (Phase 2)
SCRAPING_TIMEOUT_MS=30000

# Retry attempts for failed extractions
MAX_RETRY_ATTEMPTS=3

# ============================================================================
# OUTPUT SETTINGS
# ============================================================================

# Default output directory
OUTPUT_DIR=/mnt/user-data/outputs

# Include conversation branches in export
INCLUDE_BRANCHES=true

# Export format: json, markdown, both
EXPORT_FORMAT=both

# ============================================================================
# QUALITY TRACKING
# ============================================================================

# Path to metrics file
METRICS_FILE=~/.conversation_archaeologist/metrics.json

# Enable automatic quality tracking
ENABLE_METRICS=true

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=~/.conversation_archaeologist/logs/app.log

# Enable console logging
LOG_TO_CONSOLE=true

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Enable debug mode
DEBUG=false

# Dry run mode (don't write files)
DRY_RUN=false

# ============================================================================
# PHASE 2+ SETTINGS (Future Use)
# ============================================================================

# Playwright browser type: chromium, firefox, webkit
BROWSER_TYPE=chromium

# Run browser in headless mode
HEADLESS=true

# Enable Playwright screenshots for debugging
ENABLE_SCREENSHOTS=false

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Enable Sentry
# ENABLE_SENTRY=false
